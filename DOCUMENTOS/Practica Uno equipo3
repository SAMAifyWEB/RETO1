//31

let hoy = new Date();
let fecha = new Date(prompt("Introduce tu fecha de nacimiento con el formato yyyy/MM/dd"));

let edad = hoy.getFullYear() - fecha.getFullYear();
if((hoy.getMonth()+1) - (fecha.getMonth()+1) < 0) {
    edad = edad - 1;
}
else if(hoy.getDate() - fecha.getDate() < 0) {
    edad = edad - 1;
}
alert("Tu edad es de "+edad+" años");

//32

let hoy = new Date();
let fecha = new Date(prompt("Introduce tu fecha de nacimiento con el formato yyyy/MM/dd"));

let edad = hoy.getFullYear() - fecha.getFullYear();
if((hoy.getMonth()+1) - (fecha.getMonth()+1) < 0) {
    edad = edad - 1;
}
else if(hoy.getDate() - fecha.getDate() < 0) {
    edad = edad - 1;
}

alert("Tu edad dentro de 5 años es de "+(edad+5)+" años");


