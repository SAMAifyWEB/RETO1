//26

let sueldos;
sueldos = new Array(5);
cargar(sueldos);
calcularGastos(sueldos);


function cargar(sueldos) {
    let x;
    for (x = 0; x < sueldos.length; x++) {
        let v;
        v = parseInt(prompt("Ingrese sueldo:"));
        sueldos[x] = parseInt(v);
    }
}
//for
function calcularGastos(sueldos) {
    let total = 0;
    let x;
    for (x = 0; x < sueldos.length; x++) {
        total = total + sueldos[x];
    }
    document.write('Listado de sueldos<br>');
    for (x = 0; x < sueldos.length; x++) {
        document.write(sueldos[x] + '<br>');
    }
    document.write("Total de gastos en sueldos: " + total);
}

//Do while
let i = 0;
let gasto = 0;
do {
    gasto += sueldos[i];
    i++
}while (sueldos.length > i);
alert(gasto);
gasto = 0;

//For each
sueldos.forEach((element) => {
    gasto += element;
});
alert(gasto);

//27


let array = [['Enero', 31], ['Febrero', 28], ['Marzo', 31], ['Abril', 30], ['Mayo', 31], ['Junio', 30],
    ['Julio', 31], ['Agosto', 31], ['Septiembre', 30], ['Octubre', 31], ['Noviembre', 30], ['Diciembre', 31]];
let añoBisiesto = 2020;

let mes = parseInt(prompt("Introduce un numero entre 1 y 12"));

if(mes == 2){
    if(!comprobarBisiesto()){
        alert(array[mes-1]);
    }
}
else{
    alert(array[mes-1]);
}

function comprobarBisiesto() {
    for (let i = 0; i < 20; i++) {
        if(new Date().getFullYear() == añoBisiesto){
            alert(array[mes-1][0] + ',29');
            return true;
        }
        añoBisiesto += 4;
    }
}

//28

let string = prompt("Introduce una cadena de caracteres");
let vocales = ['a','e','i','o','u'];
let amountVocales = 0;

for (let i = 0; i < string.length; i++) {
    if(vocales.includes(string.charAt(i))){
        amountVocales++;
    }
}
alert(amountVocales/string.length*100);

//29

let primerArray = ['1', '7', '11', '68', '98'];
alert(primerArray);
let segundoArray = [];
for (let i = 1; i <= 5; i++) {
    segundoArray.push(parseInt(prompt("Introduce un numero")));
}
alert(segundoArray);

//Numeros pares del primer array
let arrayPares = [];
primerArray.forEach((numero) => {
    if(numero%2 == 0 || numero == 0){
        arrayPares.push(numero);
    };
})
alert(arrayPares);

//Buscar valor en el segundo Array
let encontrarNumero = prompt("Introduce el numero a buscar en el array");
segundoArray.forEach((numero, i) => {
    if(encontrarNumero == numero){
        alert("Está en la posicion: " + i);
    }
})

//Comprobar que numeros son mayores que 10
let arrayFiltrado = segundoArray.filter((numero) => numero > 10);
alert(arrayFiltrado);

//Crear String a partir del Array
primerArray.toString();

//Borra el primer elemento, el ultimo y un elemento intermedio del segundo array.
segundoArray.shift();
segundoArray.pop();
segundoArray.splice(2,1);
alert(segundoArray);

//Concatenar ambos arrays
let arrayConcatenado = primerArray.concat(segundoArray);
alert(arrayConcatenado);

//Crea un nuevo array con todos los numeros primos del array concatenado.
let arrayPrimos = [];
arrayConcatenado.forEach((numero) => {
    for (let i = 2; i < numero; i++) {
        if(numero%i == 0){
            return false;
        }
    }
    if(numero != 1){
        arrayPrimos.push(numero);
    }
});
alert("primos: " + arrayPrimos);

//Suma un dos a cada uno de los elementos de este tercer array
alert(arrayConcatenado.map(fSumarDos))
function fSumarDos(numero) {
    return parseInt(numero) + 2;
}

//Duplica los dos primeros elementos del primer array a partir de la posicion cuatro.
primerArray.splice(3, 0, primerArray[3]);
primerArray.splice(5, 0, primerArray[5]);
alert(primerArray);

//Guarda un 6 en cada una de las posiciones del array dos.
alert(segundoArray.join(",6,"));

//Muestra el contenido de un array empezando por la ultima posicion y acabando por la primera.
//Con reverse
alert(primerArray.reverse());

//Con unshift
let arrayReverse2 = [];
primerArray.forEach((number, i) => {
    arrayReverse2.unshift(number);
});
alert(arrayReverse2)

//Ordena de mayor a menor el contenido de un array.
alert(primerArray.sort(function(a, b){return b-a}));

